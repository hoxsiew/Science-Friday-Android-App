<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:padding="10px"
	android:id="@+id/FrameLayout01">

	<LinearLayout android:id="@+id/LinearLayout01"
		android:layout_height="fill_parent" android:layout_width="fill_parent">
		<SurfaceView android:id="@+id/SurfaceView01"
			android:layout_width="fill_parent" android:layout_height="fill_parent"></SurfaceView>
	</LinearLayout>
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:orientation="vertical" android:layout_width="fill_parent"
		android:layout_height="fill_parent" android:padding="10px"
		android:gravity="bottom" android:id="@+id/dimable">

		<TextView android:id="@+id/text_kb_streamed"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:textStyle="bold" android:gravity="center_horizontal" />
		<LinearLayout android:id="@+id/LinearLayout03"
			android:layout_height="wrap_content" android:layout_toLeftOf="@+id/TextView02"
			android:layout_gravity="center" android:layout_width="wrap_content">
			<ImageButton android:text="RR" android:id="@+id/Button01"
				android:src="@drawable/rr" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxHeight="10sp" android:maxWidth="10sp"></ImageButton>
			<ImageButton android:text="ST" android:id="@+id/Button02"
				android:src="@drawable/st" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxHeight="10sp" android:maxWidth="10sp"></ImageButton>
			<ImageButton android:text="PL" android:id="@+id/Button03"
				android:src="@drawable/pp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxHeight="10sp" android:maxWidth="10sp"></ImageButton>
			<ImageButton android:text="FF" android:id="@+id/Button04"
				android:src="@drawable/ff" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxHeight="10sp" android:maxWidth="10sp" android:longClickable="true"></ImageButton>
		</LinearLayout>

		<RelativeLayout android:id="@+id/RelativeLayout01"
			android:layout_width="wrap_content" android:layout_height="wrap_content">
			<LinearLayout android:id="@+id/LinearLayout02"
				android:layout_height="wrap_content" android:layout_width="fill_parent"
				android:layout_toLeftOf="@+id/TextView02">
				<ImageButton android:id="@+id/button_play"
					android:layout_width="wrap_content" android:layout_height="fill_parent"
					android:src="@drawable/button_pause" android:layout_gravity="center"></ImageButton>
				<TextView android:id="@+id/TextView01"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:text="0.01"></TextView>
				<SeekBar android:id="@+id/SeekBar01" android:layout_height="wrap_content"
					android:layout_width="fill_parent" android:paddingLeft="10px"
					android:paddingRight="10px"></SeekBar>
			</LinearLayout>
			<TextView android:id="@+id/TextView02" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:layout_gravity="right"
				android:layout_alignParentRight="true" android:text="-4.32"></TextView>
		</RelativeLayout>
	</LinearLayout>
	<ImageView android:id="@+id/ImageView01"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:layout_gravity="center" android:src="@drawable/sflogo"></ImageView>

<ImageButton android:src="@drawable/power" android:text="X" android:id="@+id/Button05" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_gravity="right"></ImageButton>
</FrameLayout>
